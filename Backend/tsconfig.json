{
  "compilerOptions": {
    "target": "es2022",                    
    "module": "ESNext",                      
    "moduleResolution": "node",            
    "outDir": "./dist",                     
    "rootDir": "./src",                      
    "strict": true,                         
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,                      
    "types": ["node", "express"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
